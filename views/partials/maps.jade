div(class="square-container")
    div(class="square",ng-repeat="l in matches",ng-class="{'square-container-clicked': l.clicked}")
        a(ng-click="showUsers(l)") {{l.Name}}
div(class="big user-pills-container")
    div(class="user-pills",ng-repeat="u in matchedUsers")
        a(ng-mouseover="showMenu()",title="{{u.userName}}") #[img(src="api/user/image?image={{u.image}})",width="100%",height="100%")] 
        span(class="user-pills-name") {{u.firstName}}
    div(class="user-pills-container",ng-show="matchedUsers && matchedUsers.length <=0")
        span There are no matches around your area. You can still connect to people based on the geolocations